<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OperationText">
        <item name="android:textSize">@dimen/ts_14</item>
        <item name="android:textColor">@color/green_light</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogLoadingTheme" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_refresh_view</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="PopupAnimation">
        <item name="@android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="@android:windowExitAnimation">@anim/push_down_out</item>
    </style>
</resources>
